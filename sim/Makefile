###################################################################
### Variables
###################################################################
SOURCES := $(wildcard src/*.cpp)
OBJS := $(SOURCES:.cpp=.o)
CC = g++
CFLAGS = -Wall


###################################################################
### Targets
###################################################################
all: deep_sim

deep_sim: $(OBJS)
	$(CC) $(CFLAGS) -o deep_sim $(subst src/,, $(OBJS))

.cpp.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -rf deep_sim *.o *~ src/*~
